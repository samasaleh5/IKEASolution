@model EmployeeDetailsDto
@{
    ViewData["Title"] = "Delete Employee";
}
<h1>Are You Sure To Delete Employee: @Model.Name?</h1>
<br />
<br />

<h1>Employee Details</h1>

@* Bootstrab Tabs *@
<ul class="nav nav-tabs mt-2" id="myTab" role="tablist">
    <li class="nav-item" role="presentation">
        <a class="nav-link active" id="general-tab" data-bs-toggle="tab" data-bs-target="#general" type="button" role="tab" aria-controls="general" aria-selected="true">General Information</a>
    </li>
    <li class="nav-item" role="presentation">
        <a class="nav-link" id="admin-tab" data-bs-toggle="tab" data-bs-target="#admin" type="button" role="tab" aria-controls="admin" aria-selected="false">Administration Informaiton</a>
    </li>
</ul>


<div class="tab-content" id="myTabContent">
    @*     Genral Tab Content *@
    <div class="tab-pane fade show active" id="general" role="tabpanel" aria-labelledby="home-tab">
        <div class action="row">

            <div class="form-group col-6 mb-3">
                <label asp-for="Name" class="formInput"></label>
                <input asp-for="Name" class="form-control" readonly>
            </div>

            <div class="form-group col-6 mb-3">
                <label asp-for="Email" class="formInput"></label>
                <input asp-for="Email" class="form-control" readonly>
            </div>

            <div class="form-group col-6 mb-3">
                <label asp-for="Age" class="formInput"></label>
                <input asp-for="Age" class="form-control" readonly>
            </div>

            <div class="form-group col-6 mb-3">
                <label asp-for="Address" class="formInput"></label>
                <input asp-for="Address" class="form-control" readonly>
            </div>

            <div class="form-group col-6 mb-3">
                <label asp-for="Salary" class="formInput"></label>
                <input asp-for="Salary" class="form-control" readonly>
            </div>
            <div class=" form-check">
                <input asp-for="IsActive" disabled class="form-check-input" />
                <label class=" form-check-label" asp-for="IsActive"></label>
            </div>

            <label class="control-label mb-2 " asp-for="Gender"></label> <br />
            @foreach (Gender genderoption in Enum.GetValues(typeof(Gender)))
            {
                <div class=" form-check">
                    <input type="radio" disabled class="form-check-input" asp-for="Gender" value="@genderoption">
                    <label class="form-check-label" asp-for="Gender">
                        @genderoption

                    </label>

                </div>
            }

            <div class="form-group">
                <label class="control-label mb-2 " asp-for="EmployeeType"></label>
                <select asp-for="EmployeeType" disabled asp-items="Html.GetEnumSelectList<EmployeeType>()" class="col-form-label">
                    <option value=""> Choose...</option>
                </select>


            </div>
        </div>

        @*     Admin Tab Content *@
        <div class="tab-pane fade" id="admin" role="tabpanel" aria-labelledby="profile-tab">


            <div class="form-group col-6 mb-3">
                <label asp-for="CreateOn" class="formInput"></label>
                <input asp-for="CreateOn" class="form-control" readonly>
            </div>

            <div class="form-group col-6 mb-3">
                <label asp-for="CreatedBy" class="formInput"></label>
                <input asp-for="CreatedBy" class="form-control" readonly>
            </div>

            <div class="form-group col-6 mb-3">
                <label asp-for="LastModifiedOn" class="formInput"></label>
                <input asp-for="LastModifiedOn" class="form-control" readonly>
            </div>

            <div class="form-group col-6 mb-3">
                <label asp-for="LastModifiedBy" class="formInput"></label>
                <input asp-for="LastModifiedBy" class="form-control" readonly>
            </div>


        </div>

        <form asp-action="Delete" asp-route-empId="@Model.Id" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="mt-4">
                <input type="submit" value="Delete" class="btn btn-danger" />
                <a asp-action="Index" class="btn btn-secondary">Back To list</a>
            </div>
        </form>
    </div>


